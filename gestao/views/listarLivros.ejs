<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Listagem de Livros</title>
</head>
<body>
    <header>
        <h1>Listagem de livros</h1>
    </header>
    <main>
        <section>
            <% if(livros.length > 0) { %>
                <table border="1">
                    <tr>
                        <th>ID</th>
                        <th>Título</th>
                        <th>Autor</th>
                        <th>Ano de Publicação</th>
                        <th colspan="2">Ações</th>
                    </tr>
                    <% livros.forEach(livro => { %>
                        <tr>
                            <td> <%= livro.id %> </td>
                            <td> <%= livro.titulo %> </td>
                            <td> <%= livro.autor %> </td>
                            <td> <%= livro.ano_publicacao %> </td>
                            <td><a href="/livros/editarLivro/<%= livro.id %>">Editar</a></td>
                            <td><a href="/livros/deletarLivro/<%= livro.id %>">Remover</a></td>
                        </tr>
                    <% }) %>
                </table>
            <% } else { %>
                <p>Nenhum registro no Banco de Dados!</p>
            <% } %>
        </section>
    </main>
</body>
</html>
